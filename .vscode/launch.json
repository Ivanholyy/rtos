	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Kernel debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/kernel.elf",
            "preLaunchTask": "Build Kernel",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "logging": {
                "engineLogging": true
            },
			"MIMode": "gdb",
            "setupCommands": [
                {
                    "description":  "Kernel ELF symbols",
                    "text": "symbol-file ${workspaceFolder}/build/kernel.elf",
                    "ignoreFailures": false
                },
                {
                    "description":  "Use Intel syntax",
                    "text": "set disassembly-flavor intel",
                    "ignoreFailures": false
                },
                {
                    "description":  "Remote QEMU target",
                    "text": "target remote | qemu-system-x86_64 -S -gdb stdio -debugcon file:${workspaceFolder}/qemu_vscode.log -cdrom ${workspaceFolder}/kernel-v0.iso -m 64M",
                    "ignoreFailures": false
                }
            ],
			"launchCompleteCommand": "None"
		}
	]
}